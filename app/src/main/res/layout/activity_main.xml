<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="asyncTask"
        android:text="AsyncTask" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="handleThread"
        android:text="HandleThread" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="threadPool"
        android:text="ThreadPool" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="intentService"
        android:text="IntentService" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="loader"
        android:text="Loader" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="40dp"
        android:background="#FFFFFF">

        <View
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/circle" />
    </RelativeLayout>


</LinearLayout>